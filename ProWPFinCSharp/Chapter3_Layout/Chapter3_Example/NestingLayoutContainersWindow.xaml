<Window x:Class="Chapter3_Layout.Chapter3_Example.NestingLayoutContainersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chapter3_Layout.Chapter3_Example"
        mc:Ignorable="d"
        Title="NestingLayoutContainersWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Bottom"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
            <Button Margin="10 10 2 10"
                    Padding="3"
                    Content="OK"/>
            <Button Margin="2 10 10 10"
                    Padding="3"
                    Content="Cancel"/>
        </StackPanel>
        <TextBox DockPanel.Dock="Top"
                 Margin="10">
            This is a test.
        </TextBox>
    </DockPanel>
</Window>
