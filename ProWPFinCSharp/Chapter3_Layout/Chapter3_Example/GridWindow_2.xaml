<Window x:Class="Chapter3_Layout.Chapter3_Example.GridWindow_2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chapter3_Layout.Chapter3_Example"
        mc:Ignorable="d"
        Title="GridWindow_2" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBox Margin="10"
                 Grid.Row="0"
                 Grid.Column="0"
                 Grid.ColumnSpan="3"
                 Text="This is a test."/>
        <Button Margin="10 10 2 10"
                Padding="3"
                Grid.Row="1"
                Grid.Column="1"
                Content="OK"/>
        <Button Margin="2 10 10 10"
                Padding="3"
                Grid.Row="1"
                Grid.Column="2"
                Content="Cancel"/>
    </Grid>
</Window>
