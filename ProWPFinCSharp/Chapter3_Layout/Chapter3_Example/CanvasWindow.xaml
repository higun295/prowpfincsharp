<Window
    x:Class="Chapter3_Layout.Chapter3_Example.CanvasWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Chapter3_Layout.Chapter3_Example"
    mc:Ignorable="d"
    Title="CanvasWindow"
    Height="220"
    Width="220"
    >
    <Canvas ClipToBounds="True">
        <Button
            Canvas.Left="10"
            Canvas.Top="10"
            Content="(10,10)"
            />
        <Button
            Canvas.Left="120"
            Canvas.Top="30"
            Content="(120,30)"
            />
        <Button
            Canvas.Left="60"
            Canvas.Top="80"
            Panel.ZIndex="1"
            Width="50"
            Height="50"
            Content="(60,80)"
            />
        <Button
            Canvas.Left="70"
            Canvas.Top="120"
            Width="100"
            Height="50"
            Content="(70,120)"
            />
    </Canvas>
</Window>
